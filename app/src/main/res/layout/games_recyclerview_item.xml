<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    card_view:cardCornerRadius="15dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/recyclerViewItemColor"
        android:padding="8dp">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/gamesRVImageContainer"
            android:layout_width="192dp"
            android:layout_height="128dp"
            card_view:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/gamesRVImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/imageDescription" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/gamesRVName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/salmapro_medium"
            android:textColor="@color/mainTextColorDark"
            android:textAlignment="textStart"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/gamesRVImageContainer"
            app:layout_constraintStart_toEndOf="@id/gamesRVImageContainer"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/gamesRVCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/salmapro_medium"
            android:textColor="@color/mainTextColorDark"
            android:textAlignment="textStart"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/gamesRVName"
            app:layout_constraintStart_toStartOf="@id/gamesRVName"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/gamesRVPlatformsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:divider="@drawable/linear_divider"
            app:layout_constraintBottom_toBottomOf="@id/gamesRVImageContainer"
            app:layout_constraintStart_toStartOf="@id/gamesRVName"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/gamesRVWindowsImage"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/windows"
                android:contentDescription="@string/imageDescription" />

            <ImageView
                android:id="@+id/gamesRVAppleImage"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/apple"
                android:contentDescription="@string/imageDescription" />

            <ImageView
                android:id="@+id/gamesRVSteamImage"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/steam"
                android:contentDescription="@string/imageDescription" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gamesRVNewsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@id/gamesRVImageContainer"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/gamesRVNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salmapro_medium"
                android:textColor="@color/mainTextColorDark"
                android:textAlignment="textStart"
                android:text="@string/news"
                app:layout_constraintBottom_toBottomOf="@id/gamesRVNewsImage"
                app:layout_constraintTop_toTopOf="@id/gamesRVNewsImage"
                app:layout_constraintEnd_toStartOf="@id/gamesRVNewsImage"/>

            <ImageView
                android:id="@+id/gamesRVNewsImage"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/right_arrow"
                android:contentDescription="@string/imageDescription"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>