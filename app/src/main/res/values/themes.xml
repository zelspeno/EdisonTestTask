<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EdisonTestTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/headerBackgroundColor</item>
        <item name="colorPrimaryVariant">@color/headerBackgroundColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="editTextColor">@color/mainTextColorLight</item>
        <item name="android:textColor">@color/mainTextColorLight</item>
        <item name="android:textColorHint">@color/mainTextColorLight</item>
        <item name="android:textColorPrimary">@color/mainTextColorLight</item>
        <item name="textFillColor">@color/mainTextColorLight</item>
        <item name="android:tint">@color/mainTextColorLight</item>
        <item name="itemIconTint">@color/mainTextColorLight</item>
        <item name="fontFamily">@font/salmapro_medium</item>
        <item name="android:textAppearance">@color/mainTextColorLight</item>
    </style>
</resources>